# Optional environment overrides for the GPU validation bootstrap
# Tweak these values to test alternate NVHPC flag combinations.

# Force explicit NVHPC flags (comment out to inherit config.env defaults)
# export NVHPC_CXX_FLAGS="-O3 -DNDEBUG -stdpar=gpu -gpu=cc89 -std=c++20 -DUSE_CUDA_MALLOC"

# Disable TBB interception
export INSTALL_TBB=false
export NVHPC_CXX_FLAGS="${NVHPC_CXX_FLAGS:-} -D_GLIBCXX_USE_TBB_PAR_BACKEND=0 -Minfo=stdpar"

# Avoid inheriting host include overrides that can pull PSTL/TBB headers
unset CPLUS_INCLUDE_PATH

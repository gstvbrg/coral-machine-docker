# Environment configuration for Docker Compose
# Copy this to .env and customize as needed

# User configuration (should match your host user for file permissions)
USERNAME=coral-dev
USER_UID=1000
USER_GID=1000

# Volume path (relative or absolute)
# Single volume contains everything: deps/, source/, build/, vtk/
WORKSPACE_VOLUME_PATH=./volumes/workspace

# Component installation flags
INSTALL_NVIDIA_HPC=true
INSTALL_PARAVIEW=true
INSTALL_PALABOS=true
INSTALL_GEOMETRY_CENTRAL=true
INSTALL_POLYSCOPE=true
INSTALL_EIGEN3=true
INSTALL_GL_HEADERS=true

# Build configuration
# BUILD_JOBS automatically detects available cores if not set
# BUILD_JOBS=8  # Uncomment to override automatic detection
CMAKE_BUILD_TYPE=Release
CCACHE_SIZE=10G

# Version overrides (optional)
# NVIDIA_HPC_VERSION=24.7
# PARAVIEW_VERSION=6.0.0
# CUDA_VERSION=12.5

# Development settings
SSH_PORT=2222
PARAVIEW_PORT=11111

# GPU settings (for dev container)
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility,graphics